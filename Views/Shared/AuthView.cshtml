@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <div class="align-self-center m-2">@User.Identity.Name</div>
    </li>
    <li class="nav-item">
        <form method="post" asp-controller="Account" asp-action="Logout">
            <input type="submit" class="btn btn-danger align-self-center" value="Выход" />
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Вход</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary ml-1">Регистрация</a>
    </li>
}
