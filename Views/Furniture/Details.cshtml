@using Common.Extensions
@using FurStore.Common.Enums
@using FurStore.Models.Store
@using System.ComponentModel.DataAnnotations
@model Furniture

@{
	ViewData["Title"] = "Item details";
}


@functions {
    string GetDisplay(FurnitureTypes os)
    {
        return os.GetAttribute<DisplayAttribute>().Name;
    }
}

<div class="row">
	<div class="col-md-8 offset-2">
		<div class="card mb-12">
			<div class="row g-0">
				<div class="col-md-12">
					<div class="card-header text-white bg-info">
						<p class="card-text">
							<h5 class="card-title">@Model.Title</h5>
						</p>
					</div>
				</div>
				<div class="col-md-4">
					<img src="@Model.ImageUrl" width="100%" alt="@Model.Title" />
				</div>
				<div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text"><b>Категория: </b>@GetDisplay(Model.FurnitureType)</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <a class="btn btn-outline-primary float-right mb-1" asp-action="Index">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
		</div>
	</div>
</div>